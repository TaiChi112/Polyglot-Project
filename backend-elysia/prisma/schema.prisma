model Product {
  id             Int      @id @default(autoincrement())
  name           String   @unique @db.VarChar(100)
  description    String?  @db.Text
  price          Decimal  @db.Decimal(10, 2)
  stock_quantity Int?     @default(0)
  created_at     DateTime @default(now()) @db.Timestamptz(6)

  @@map("products")
}